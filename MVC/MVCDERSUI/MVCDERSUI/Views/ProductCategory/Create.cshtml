@model MVCDERSUI.Models.Entity.ProductCategory
@{
    ViewData["Title"] = "Yeni Kategori Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-3">

    </div>
    <div class="col-lg-12">
        <form action="/admin/urun-kategori-ekle" method="post">
            @if (ViewBag.Hata != null)
            {
                <div class="form-group">
                    <div class="alert alert-danger">
                        <h3>@ViewBag.Hata</h3>
                    </div>
                </div>
            }
            <div class="form-group">
                <label class="form-control">Ürün Kategori Sırası</label>
                <input type="number" class="form-control" maxlength="3" name="Rank" required placeholder="Lütfen Kategori Sırası Giriniz" />
            </div>
            <div class="form-group">
                <label class="form-control">Ürün Kategori Adı</label>
                <input type="text" class="form-control" maxlength="110" name="CategoryName" required placeholder="Lütfen Kategori Adı Giriniz" />
            </div>
            <div class="form-group">
                <label class="form-control">İşlem Butonları</label>
                <button type="submit" class="btn btn-outline-success">Yeni Ürün Kategorisi Ekle</button>
                <a asp-controller="ProductCategory" asp-action="Index" class="btn btn-outline-dark">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>