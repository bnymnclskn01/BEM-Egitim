@model MVCDERSUI.Models.Entity.UserMember
@{
    ViewData["Title"] = "Yeni Kullanıcı Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <form action="/User/Edit/@Model.ID" method="post">
                    <div class="form-group">
                        <label>Adı Soyadı</label>
                        <input type="text" name="NameSurname" value="@Model.NameSurname" class="form-control" placeholder="Lütfen Adınızı Giriniz" />
                    </div>
                    <div class="form-group">
                        <label>E-posta</label>
                        <input type="email" name="Email" value="@Model.Email" class="form-control" placeholder="Lütfen E-posta Giriniz" />
                    </div>
                    <div class="form-group">
                        <label>Şifre</label>
                        <input type="password" name="Password" value="@Model.Password" class="form-control" placeholder="Lütfen Şifre Giriniz" />
                    </div>
                    <div class="form-group">
                        <label>Kullanıcı Notu</label>
                        <input type="text" name="UserNote" value="@Model.UserNote" class="form-control" placeholder="Lütfen Kullanıcı Notu Giriniz" />
                    </div>
                    <div class="form-group">
                        <label>Telefon Numarası</label>
                        <input type="tel" maxlength="11" value="@Model.PhoneNumber" name="PhoneNumber" class="form-control" placeholder="Lütfen Telefon Numarası Giriniz" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Yeni Kayıt Güncelle</button>
                        <a href="/User/Index" class="btn btn-dark">Kullanıcı Listele</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>